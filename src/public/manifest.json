{
  "name": "Twitch Chat TheHitless Badges",
  "version": "1.2",
  "description": "Add Badges to Twitch Chat from TheHitless community",
  "content_scripts": [
    {
      "matches": [
        "https://www.twitch.tv/*",
        "https://twitch.tv/*"
      ],
      "js": [
        "./bundle.js"
      ],
      "css": [
        "./bundle.css"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "host_permissions": [
    "https://thehitless.com/api/*",
    "https://twitch.tv/*",
    "https://www.twitch.tv/*"
  ],
  "manifest_version": 3
}
